<% content_for :title, "Quests" %>

<div class="max-w-full w-full mx-auto bg-white overflow-hidden">
  <!-- User Profile Header -->
  <div class="p-6 sm:p-8 md:p-10 mt-0 sm:mt-0 md:mt-0">
    <div class="text-sm text-gray-500 mb-1">
      Kritsada mahanam
    </div>
    <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-indigo-900 it">My Academy Quest</h1>
    
    <!-- Profile Image and Brag Document -->
    <div class="mt-6 sm:mt-8 md:mt-10 grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
        <%= image_tag "profile_image.jpg", alt: "Profile Image", class: "max-h-full max-w-full mx-auto object-contain rounded-md" %>
      <div class="flex items-center">
        <%= link_to "#", class: "w-full inline-flex items-center justify-center px-8 py-6 md:py-8 border border-transparent text-xl sm:text-2xl font-medium rounded-lg shadow-lg text-white bg-indigo-900 hover:bg-indigo-800 transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          My brag document
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- Quests List with Create Button -->
  <div class="px-6 sm:px-8 md:px-10 py-5 sm:py-6 md:py-8 bg-indigo-50 border-t border-indigo-100 flex justify-between items-center">
    <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-indigo-900">Quests</h2>
    <% if @quests.any? %>
      <%= link_to new_quest_path, class: "inline-flex items-center justify-center px-5 sm:px-6 py-3 sm:py-4 border border-transparent text-lg sm:text-xl font-medium rounded-md shadow-md text-white bg-indigo-600 hover:bg-indigo-700 transition-colors duration-150 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        Add quest
      <% end %>
    <% end %>
  </div>
  
  <div id="quests" class="min-h-[350px]">
    <% if @quests.any? %>
      <ul class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6 p-6 sm:p-8 md:p-10">
        <% @quests.each do |quest| %>
          <li class="border border-gray-200 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200">
            <%= link_to quest, class: "flex items-center p-5 hover:bg-indigo-50 transition-colors duration-150 ease-in-out rounded-lg" do %>
              <div class="flex-shrink-0 mr-4">
                <div class="bg-indigo-100 p-3 rounded-full">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-lg sm:text-xl md:text-2xl font-medium text-gray-900 truncate">
                  <%= quest.name %>
                </p>
              </div>
              <div class="flex-shrink-0 ml-4">
                <% if quest.status? %>
                  <div class="text-indigo-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                <% else %>
                  <div class="text-gray-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                <% end %>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="py-24 px-6 sm:px-8 md:px-10 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-24 w-24 text-indigo-100" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
        <h3 class="mt-6 text-2xl sm:text-3xl md:text-4xl font-medium text-gray-900">No Quests Found</h3>
        <p class="mt-4 text-lg sm:text-xl md:text-2xl text-gray-500 max-w-2xl mx-auto">Start your adventure by creating a new quest</p>
        <div class="mt-10">
          <%= link_to new_quest_path, class: "inline-flex items-center px-8 sm:px-10 md:px-12 py-4 sm:py-5 md:py-6 border border-transparent shadow-lg text-xl sm:text-2xl md:text-3xl font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-3 h-8 w-8 sm:h-9 sm:w-9" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            Create New Quest
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>